<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visualizar_dos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="24dp"

    tools:context=".vizualizar_Contador_dos">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/contador1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="232dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:text="Contador 2"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="right"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Editar "
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="24dp">



        <EditText
            android:id="@+id/numeroContador"
            android:layout_width="257dp"
            android:layout_height="34.37dp"
            android:hint="Número de Contador"

            android:layout_margin="10dp"
            android:background="#8D8B8C89"
            android:inputType="number" />

        <EditText
            android:id="@+id/barrio"
            android:layout_width="257dp"
            android:layout_height="34.37dp"
            android:background="#8D8B8C89"
            android:hint="Barrio"
            android:textColor="@color/black"
            android:inputType="number" />

        <EditText
            android:id="@+id/direccion"
            android:layout_width="257dp"
            android:layout_height="34.37dp"
            android:background="#8D8B8C89"
            android:hint="Dirección"
            android:layout_margin="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/nombreContador"
            android:layout_width="257dp"
            android:layout_height="34.37dp"
            android:hint="Estrato"
            android:background="#8D8B8C89"
            android:inputType="text" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:text="Estado     "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:src="@drawable/contador" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="left"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:text="  Alerta Alta: 200 "
                android:textSize="16sp"
                android:textStyle="normal"

                />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="left"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:text="  Alerta Media: 450 "
                android:textSize="16sp"
                android:textStyle="normal"

                />


            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="left"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:text="  Alerta Temprana:300 "
                android:textSize="16sp"
                android:textStyle="normal"

                />



        </LinearLayout>






    </LinearLayout>

    <Space
        android:layout_width="400dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/agregarnoti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:text="Agregar Notificación"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btEliminar"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="#B0D892"
            android:text="Eliminar Contador"
            android:textSize="18sp"

            />


    </LinearLayout>

    <Space
        android:layout_width="400dp"
        android:layout_height="140dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoAhorra"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_este_s_" />


    </LinearLayout>



</LinearLayout>